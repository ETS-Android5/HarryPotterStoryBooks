<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="45dp"
    android:layout_marginEnd="45dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/ll_list_chapters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_list_chapters_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_circular_text"
                android:ems="2"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:maxLines="1"
                android:padding="14dp"
                android:text="20"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_list_chapters_number"
                android:layout_alignBottom="@+id/tv_list_chapters_number"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@+id/iv_list_chapters_bookmark"
                android:layout_toEndOf="@+id/tv_list_chapters_number"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_list_chapters_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/georgia_regular"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:text="The Boy who Lived"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_list_chapters_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_list_chapters_title"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:text="17"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_list_chapters_title"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/tv_list_chapters_page"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:text="@string/string_chapters_page"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_list_chapters_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_list_chapters_number"
                android:layout_alignBottom="@+id/tv_list_chapters_number"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Bookmark"
                android:src="@drawable/ic_menu_bookmark_light"
                android:tint="@color/colorMediumGray"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorLightGray" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>